{
  "name": "typescriptboilerplate",
  "version": "1.0.2",
  "description": "Boilerplate for using TypeScript with a small web server. Ideal for testing small code in TypeScript.",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrDesjardins/TypeScriptBoilerplate.git"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "del-cli deploy/**",
    "package": "./node_modules/.bin/webpack --config webpack.config.js --display-error-details",
    "copy": "copyfiles -u 1 ./app/index.html ./deploy",
    "build": "del-cli deploy/** & SET NODE_ENV=development & webpack --config webpack.config.js --display-error-details & copyfiles -u 1 ./app/index.html ./deploy/",
    "buildserver": "tsc -m commonjs app/server/server.ts --outDir deploy/",
    "server": "node bin/www.js",
    "test": "test"
  },
  "author": "Patrick Desjardins",
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/jquery": "^2.0.46",
    "@types/react": "^15.0.26",
    "@types/react-dom": "^15.5.0",
    "@types/systemjs": "^0.20.2",
    "awesome-typescript-loader": "^3.1.3",
    "copyfiles": "^1.2.0",
    "del-cli": "^1.0.0",
    "express": "^4.15.3",
    "file-loader": "^0.11.2",
    "source-map-loader": "^0.2.1",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1",
    "tslint": "^5.4.2"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  }
}